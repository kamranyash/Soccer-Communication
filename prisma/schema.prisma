// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  VISITOR
  PLAYER
  COACH
}

enum PostType {
  GUEST_PLAYER
  TRYOUT
}

enum MediaType {
  IMAGE
  VIDEO
  LINK
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  role          Role      @default(VISITOR)
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  playerProfile      PlayerProfile?
  coachProfile       CoachProfile?
  sentMessages       Message[]                 @relation("MessageSender")
  conversations      ConversationParticipant[]
  favorites          Favorite[]
  reportedItems      Report[]
  activity           Activity[]
  accounts           Account[]
  sessions           Session[]
  verificationTokens VerificationToken[]
  MediaAsset         MediaAsset[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([identifier, token])
}

model PlayerProfile {
  id           String   @id @default(cuid())
  userId       String   @unique
  photoUrl     String?  // Profile photo URL
  firstName    String?
  lastName     String?
  team         String?
  position     String?
  level        String? // ECNL, MLS Next, E64, NPL, AYSO, etc.
  ageGroup     String? // U12, U14, U16, U18, etc.
  region       String? // Los Angeles Area, Orange County, Inland Empire, San Diego County, Central Coast / Ventura
  contactEmail String?
  contactPhone String?
  bio          String?  @db.Text
  isPublic     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user  User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  media MediaAsset[]
}

model CoachProfile {
  id           String   @id @default(cuid())
  userId       String   @unique
  photoUrl     String?  // Profile photo URL
  firstName    String?
  lastName     String?
  club         String?
  teamName     String?
  level        String? // ECNL, etc.
  record       String?
  region       String? // Los Angeles Area, Orange County, Inland Empire, San Diego County, Central Coast / Ventura
  contactEmail String?
  contactPhone String?
  bio          String?  @db.Text
  isPublic     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user  User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  media MediaAsset[]
  posts Post[]
}

model MediaAsset {
  id     String  @id @default(cuid())
  // who uploaded it (optional)
  userId String?

  // link targets (each optional, but use only one per row)
  playerProfileId String?
  coachProfileId  String?
  postId          String?

  profileType String? // "player" or "coach" (optional helper)
  type        MediaType
  url         String
  caption     String?
  createdAt   DateTime  @default(now())

  // relations
  user          User?          @relation(fields: [userId], references: [id], onDelete: Cascade)
  playerProfile PlayerProfile? @relation(fields: [playerProfileId], references: [id], onDelete: Cascade, map: "fk_media_playerprofile")
  coachProfile  CoachProfile?  @relation(fields: [coachProfileId], references: [id], onDelete: Cascade, map: "fk_media_coachprofile")
  post          Post?          @relation(fields: [postId], references: [id], onDelete: Cascade, map: "fk_media_post")
}

model Post {
  id          String    @id @default(cuid())
  coachUserId String
  type        PostType
  title       String
  description String    @db.Text
  date        DateTime?
  location    String?
  region      String?   // Los Angeles Area, Orange County, Inland Empire, San Diego County, Central Coast / Ventura
  needs       String?   @db.Text // Specific player needs/requirements
  status      String    @default("active")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  coach CoachProfile @relation(fields: [coachUserId], references: [userId], onDelete: Cascade)
  media MediaAsset[]
}

model Conversation {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  participants ConversationParticipant[]
  messages     Message[]
}

model ConversationParticipant {
  id             String    @id @default(cuid())
  conversationId String
  userId         String
  lastReadAt     DateTime?
  isBlocked      Boolean   @default(false)
  createdAt      DateTime  @default(now())

  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([conversationId, userId])
}

model Message {
  id             String   @id @default(cuid())
  conversationId String
  senderUserId   String
  body           String   @db.Text
  mediaUrl       String?
  createdAt      DateTime @default(now())

  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  sender       User         @relation("MessageSender", fields: [senderUserId], references: [id], onDelete: Cascade)
}

model Favorite {
  id         String   @id @default(cuid())
  userId     String
  targetType String // "player", "coach", "post"
  targetId   String
  createdAt  DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, targetType, targetId])
}

model Report {
  id             String   @id @default(cuid())
  reporterUserId String
  targetType     String // "player", "coach", "post", "message"
  targetId       String
  reason         String   @db.Text
  status         String   @default("pending")
  createdAt      DateTime @default(now())

  reporter User @relation(fields: [reporterUserId], references: [id], onDelete: Cascade)
}

model Activity {
  id        String   @id @default(cuid())
  userId    String?
  verb      String // "profile_view", "post_created", "message_sent", etc.
  target    String? // ID of what was acted upon
  createdAt DateTime @default(now())

  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)
}
